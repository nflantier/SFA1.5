<!--
The energy cost and fluid cost of a recipe will be divides by the quantity of the itemneeded
tickPerItem is the amount of tick between two item being consumed
-->

<recipes>
    <recipe name="Vibranium Shield" energyCost="32000" fluidCost="3200" tickPerItem="1000">
		<input>
			<itemStack modID="sfartifacts" itemName="itemVibraniumAlloySheet" itemQuantity="32"/>
			<itemStack modID="sfartifacts" itemName="itemMold" itemDamage="1"/>
		</input>
		<output>
			<itemStackWithNbt modID="sfartifacts" itemName="itemVibraniumShield">
				<nbt nbtType="boolean" nbtValue="true" nbtName="CanBlock">
			</itemStackWithNbt>
		</output>
    </recipe>
</recipes>